{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Run server",
      "cwd": "${workspaceFolder}/website",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "npx jome s"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Build and run website",
      "cwd": "${workspaceFolder}/website",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "npx jome dev"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Jest tests written in Jome",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "jome jome/test/generic.test.jome"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Jest tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "preLaunchTask": "Jest runner"
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/jome",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/jome/node_modules/jest/bin/jest.js",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
          "--extensionDevelopmentPath=${workspaceFolder/vscode-jome}"
      ]
  }
  ]
}