{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Jest runner",
      "command": "npm",
      "args": ["run", "jest"],
      "options": {
        "cwd": "${workspaceFolder}/"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
    },
    {
      "label": "Build tests",
      "command": "node",
      "args": ["jome.js", "-c", "jome -c **/*.test.jome"],
      "options": {
        "cwd": "${workspaceFolder}/"
      }
    }
  ]
}